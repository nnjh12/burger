<div class="container">
    
        <img src="assets/img/burger.jpg" width="200px" class="mx-auto d-block">
    

    {{!-- <h2 class="text-center">Add a Burger</h2> --}}
    <div class="input-group mb-4">
        <input type="text" class="form-control" placeholder="Type your favorite burger!" id="burger-input">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="button" id="add-button">Add a burger</button>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h3>Devour it!</h3>
            <ul>
                {{#each SqlReturnedArray}}
                {{#unless devoured}}
                <li>
                    {{burger_name}}
                    <button type="button" class="btn btn-outline-secondary btn-sm" id="devour-button" data-id="{{id}}"
                        data-devoured="{{devoured}}">
                        Devour it!
                    </button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h3>Devoured!</h3>
            <ul>
                {{#each SqlReturnedArray}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>


</div>